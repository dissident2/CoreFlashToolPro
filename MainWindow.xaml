<Window x:Class="CoreFlashToolPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Core Flash Tool Pro" Height="460" Width="780">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
            <Button Content="Read Info" Click="BtnReadInfo_Click" Margin="0,0,8,0"/>
            <Button Content="Print GPT" Click="BtnPrintGpt_Click" Margin="0,0,8,0"/>
        </StackPanel>
        <TextBox x:Name="LogTextBox" Margin="8" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
    </DockPanel>
</Window>

