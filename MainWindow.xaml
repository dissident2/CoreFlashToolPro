<Window x:Class="CoreFlashToolPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Core Flash Tool Pro" Height="480" Width="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
            <Button Name="BtnPrintGpt" Click="BtnPrintGpt_Click" Content="Print GPT" Padding="12,6" />
        </StackPanel>
        <TextBox Name="LogTextBox" Margin="8" FontFamily="Consolas" FontSize="12"
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Background="White"/>
    </DockPanel>
</Window>
